{
  "name": "issuer",
  "version": "0.1.0",
  "description": "Verifiable credentials for UNCHAIN members.",
  "bugs": "",
  "scripts": {
    "solhint": "solhint --max-error 0 -c ./solhint.json \"contracts/**/*.sol\"",
    "solhint:fix": "solhint --fix --max-error 0 -c ./solhint.json \"contracts/**/*.sol\"",
    "test": "npx hardhat test test/0.integrated.test.ts",
    "setup:issuer": "yarn node --loader ts-node/esm scripts/setupIssuer.ts",
    "devnet": "hardhat --config hardhat.devnet.config.ts node",
    "devnet:deploy": "npx hardhat run --network localhost scripts/deploy.ts ",
    "devnet:resolve": "npx hardhat run --network localhost scripts/resolve.ts ",
    "devnet:regist": "npx hardhat run --network localhost scripts/regist.ts ",
    "grant:devnet": "cert-issuer -c ./config/.cert-issuer.devnet.conf --chain ethereum_goerli --goerli_rpc_url http://127.0.0.1:8545/",
    "grant:testnet": "cert-issuer -c ./config/.cert-issuer.testnet.conf --chain ethereum_goerli",
    "credential:test": "yarn node --loader ts-node/esm test/credential.test.ts"
  },
  "devDependencies": {
    "@blockcerts/cert-verifier-js": "^6.5.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/hardhat-upgrades": "^1.19.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/jest": "^28.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^12.20.55",
    "@types/uuid": "^9.0.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.4",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^28.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-jest": "^28.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@trust/keyto": "^1.0.1",
    "bip32": "^4.0.0",
    "bitcoinjs-lib": "^6.1.0",
    "ecpair": "^2.1.0",
    "ethr-did": "^2.3.6",
    "ethr-did-resolver": "^8.0.0",
    "tiny-secp256k1": "^2.2.1",
    "uuid": "^9.0.0"
  },
  "private": true,
  "author": {
    "name": "nc163",
