{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@utility": ["lib"]
    }
  },
  "include": ["lib/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "experimentalSpecifierResolution": "node",
    "files": true,
    "require": ["tsconfig-paths/register"]
  }
}
